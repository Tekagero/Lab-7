{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">{{news.author.name|e}}</h1>
            <p class="col-md-8 fs-4">{{ news.text|e }}</p>
            <h6 class="display-6 fw-bold">Просмотров: {{ news.views|e }}</h6>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <div class="card p-3">
                    {%  if authorized == true %}
                    <form>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Напишите комментарий.</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Ваш комментарий..."></textarea>
                            <button type="button" class="btn btn-primary btn-lg m-md-3">Отправить комментарий.</button>
                        </div>
                    </form>
                    {% endif %}
                    {% for comment in comments %}
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="user d-flex flex-row align-items-center"> <img src="../../public/images/slow.jpg" width="30" class="user-img rounded-circle mr-2">
                            <span>
                                <small class="font-weight-bold text-primary">{{ comment.author.name|e }}</small>
                                <small class="font-weight-bold">{{ comment.text|e }}</small>
                            </span>
                        </div>
                        <small>{{ comment.date|date }}</small>
                    </div>
                    <div class="action d-flex justify-content-between mt-2 align-items-center">
                        <div class="reply px-4">
                            <small>{{ comment.author.role|e }}</small>
                            <span class="dots"></span>
                        </div>
                        <div class="icons align-items-center">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-check-circle-o check-icon"></i>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}